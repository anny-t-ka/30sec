<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.useran.a30sec.MainSpisok"
    tools:showIn="@layout/main_spisok"
    android:background="#fbf59d"
    android:theme="@style/ThemeOverlay.AppCompat.Dark">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Каждое упражнение выполняется с опорой на стену.
Выберите упражнение:"
        android:id="@+id/textView"
        android:textSize="22sp"
        android:textColor="#3a3a3b"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Wall Push-up"
        android:id="@+id/btnPush"
        android:layout_below="@+id/textView"
        android:textSize="20sp"
        android:layout_marginTop="30dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Bridge Dip"
        android:textSize="20sp"
        android:id="@+id/btnDip"
        android:layout_below="@+id/btnPush"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Wall sit"
        android:textSize="20sp"
        android:id="@+id/btnSit"
        android:layout_below="@+id/btnDip"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Runner&apos;s Lunge"
        android:textSize="20sp"
        android:id="@+id/btnLunge"
        android:layout_below="@+id/btnSit"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Thread the Needle"
        android:id="@+id/btnThread"
        android:textSize="20sp"
        android:layout_below="@+id/btnLunge"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Ultimate Pike"
        android:id="@+id/btnPike"
        android:textSize="20sp"
        android:layout_below="@+id/btnThread"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
</RelativeLayout>
