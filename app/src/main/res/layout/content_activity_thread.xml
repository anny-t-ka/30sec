<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/scroll"
    android:background="#fbf59d"
    android:layout_below="@+id/dipim"
    android:layout_alignParentRight="true"
    android:layout_alignParentEnd="true"
    android:transitionGroup="false"
    android:theme="@style/ThemeOverlay.AppCompat.Dark">

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="#fbf59d"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.useran.a30sec.ActivityThread"
    tools:showIn="@layout/activity_thread">


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="200dp"
        android:id="@+id/Thread"
        android:layout_marginTop="50dp"
        android:focusableInTouchMode="false"
        android:src="@drawable/thread" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Исходное положение: Встать в боковую планку с опорой на правую вытянутую руку (рука строго под плечом). Ноги установить у самого низа стемы таким образом, чтобы пальцы левой ноги касались пятки правой (как указано на рисунке). Левая рука тянется к потолку, являясь продолжением прямой линией правой руки.
Выполнение упражнения: На 4 счета поворачиваем туловище так, чтобы левая рука оказалась под грудью (как на рисунке), зафиксироваться на 4 счета и на 4 счета вернуться в исходное положение. Для упрощения выполнения — не поворачивать корпус.
Время выполнения: 1 мин. на каждую сторону (руку).
В данном упражнении задействованы мышцы:рук, груди, пресса."
        android:textSize="18sp"
        android:textColor="#3a3a3b"
        android:id="@+id/textThread"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/Thread"
        android:layout_centerHorizontal="true" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text=""
        android:id="@+id/textTimer"
        android:textSize="22sp"
        android:textColor="#3a3a3b"
        android:layout_below="@+id/textThread"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ЗАПУСТИТЕ ТАЙМЕР"
        android:id="@+id/btnStart"
        android:layout_below="@+id/textTimer"
        android:layout_centerHorizontal="true" />
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/btnStart"
        android:layout_marginTop="5dp"
        android:layout_alignParentBottom="true">

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="на главную"
            android:id="@+id/Btnback1"
            android:layout_below="@+id/btnStart"
            android:layout_alignRight="@+id/textTimer"
            android:layout_alignEnd="@+id/textTimer"
            android:layout_alignParentEnd="false"
            android:layout_alignParentRight="false"
            android:layout_weight="1" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Далее"
            android:id="@+id/Btnnext1"
            android:width="1dp"
            android:layout_weight="1"
            android:layout_alignBaseline="@+id/textTimer"
            android:layout_alignBottom="@+id/textTimer"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />
    </LinearLayout>
</RelativeLayout>
</ScrollView>