<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/scroll"
    android:layout_below="@+id/dipim"
    android:layout_alignParentRight="true"
    android:layout_alignParentEnd="true"
    android:background="#fbf59d"
    android:transitionGroup="false"
    android:theme="@style/ThemeOverlay.AppCompat.Dark">

    <RelativeLayout

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.useran.a30sec.ActivityDip"
    tools:showIn="@layout/activity_dip"
        android:background="#fbf59d">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:id="@+id/dipim"
        android:src="@drawable/dip"
        android:layout_marginTop="50dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Исходное положение: Сидя перед стеной, ладони поставить на уровне плеч, пальцы направлены в сторону стены. Ноги поставить на стену, образовывая прямой угол.
Выполнение упражнения: Выпрямить руки, чтобы поднять ягодицы с пола, и на два счета опускать корпус, сгибая руки в локтях (не касаясь ягодицами пола), и далее выпрямляя локти на два счета, поднять корпус в исходное положение. Для облегчения упражнения — поставить одну ногу на пол.
Время выполнения: 1 мин.
В данном упражнении задействованы мышцы: рук, спины, пресса."
            android:id="@+id/dip"
            android:textSize="18sp"
            android:textColor="#3a3a3b"
            android:textIsSelectable="false"
            android:isScrollContainer="true"
            android:layout_marginTop="20dp"
             android:layout_below="@+id/dipim"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text=""
            android:id="@+id/textTimer"
            android:textSize="22sp"
            android:textColor="#3a3a3b"
            android:layout_marginTop="20dp"
            android:layout_below="@+id/dip"
            android:layout_centerHorizontal="true" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="Запустите таймер"
            android:id="@+id/btnStart"
            android:layout_below="@+id/textTimer"
            android:layout_centerHorizontal="true" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/btnStart"
            android:layout_marginTop="5dp"
            android:layout_alignParentBottom="true">

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="на главную"
                android:id="@+id/Btnback1"
                android:layout_below="@+id/btnStart"
                android:layout_alignRight="@+id/textTimer"
                android:layout_alignEnd="@+id/textTimer"
                android:layout_alignParentEnd="false"
                android:layout_alignParentRight="false"
                android:layout_weight="1" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Далее"
                android:id="@+id/Btnnext1"
                android:width="1dp"
                android:layout_weight="1"
                android:layout_alignBaseline="@+id/textTimer"
                android:layout_alignBottom="@+id/textTimer"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />
        </LinearLayout>

    </RelativeLayout>
</ScrollView>
