<?xml version="1.0" encoding="utf-8"?>
<ScrollView

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:id="@+id/scroll"
    android:background="#fbf59d"
    android:layout_alignParentRight="true"
    android:clickable="true"
    android:layout_alignParentEnd="true"
    android:theme="@style/ThemeOverlay.AppCompat.Dark"
    android:touchscreenBlocksFocus="false">

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.useran.a30sec.ActivityPush"
    tools:showIn="@layout/push"
    android:background="#fbf59d">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="200dp"
            android:id="@+id/push_up"
            android:layout_marginTop="50dp"
            android:src="@drawable/push_up"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Исходное положение: Ставим руки на пол, чуть шире , чем на ширине плеч; туловище поднимаем выше уровня плеч, пятки плотно прижаты к стене.
Выполнение упражнения: В исходном положении задержаться на 30 секунд, далее в течении 30 секунд делаем отжимания, не разводя руки в стороны (держать близко к корпусу).
Для облегчения упражнения — ноги опустить на пол, пятки прижаты к стене.
В данном упражнении задействованы мышцы: рук, груди, спины, пресса, ног (квадрицепс)."
            android:id="@+id/Push"
            android:textSize="18sp"
            android:textColor="#3a3a3b"
            android:layout_marginTop="20dp"
            android:layout_below="@+id/push_up"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text=""
            android:id="@+id/textTimer"
            android:textSize="22sp"
            android:textColor="#3a3a3b"
            android:layout_below="@+id/Push"
            android:layout_marginTop="15dp"
            android:layout_centerHorizontal="true" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="Запустите таймер"
            android:id="@+id/btnStart"
            android:layout_below="@+id/textTimer"
            android:layout_centerHorizontal="true"

             />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/btnStart"
            android:layout_marginTop="5dp"
            android:layout_alignParentBottom="true">

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="на главную"
                    android:id="@+id/Btnback"
                    android:layout_below="@+id/btnStart"
                    android:layout_alignRight="@+id/textTimer"
                    android:layout_alignEnd="@+id/textTimer"
                    android:layout_alignParentEnd="false"
                    android:layout_alignParentRight="false"
                    android:layout_weight="1" />

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Далее"
                    android:id="@+id/Btnnext"
                    android:width="1dp"
                    android:layout_weight="1"
                    android:layout_alignBaseline="@+id/textTimer"
                    android:layout_alignBottom="@+id/textTimer"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true" />
        </LinearLayout>

</RelativeLayout>
</ScrollView>
